# Fill paths below
ErrorDocument 403 /blog/prevent-index.php
ErrorDocument 404 /blog/prevent-index.php

# Deny access to articles
RewriteEngine On
RewriteRule ^articles/?$ - [F,L]
RewriteRule ^articles/* - [F,L]

# Deny access to cron
RewriteRule ^cron/?$ - [F,L]
RewriteRule ^cron/* - [F,L]

# Deny access to footer.php, header.php, headlinks.php, settings.php and favicon.php
<FilesMatch "^(footer|header|headlinks|settings|favicon)\.php">
	Order allow,deny
	Deny from all
</FilesMatch>